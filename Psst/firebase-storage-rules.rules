rules_version = '2';

// Firebase Storage Security Rules for Psst Messaging App
// NOTE: Storage rules cannot call Firestore get()/exists().
// For MVP, restrict chat images to authenticated users only.

service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - users can only write their own, anyone can read
    match /profile_photos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Chat images (PR #009) - allow authenticated users (app enforces membership)
    match /chat-images/{chatID}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
